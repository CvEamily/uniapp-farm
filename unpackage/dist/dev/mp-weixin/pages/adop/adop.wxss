.bg {
  padding-top: 60rpx;
  background-color: yellow;
  background-image: url("https://ts1.cn.mm.bing.net/th/id/R-C.c583a87b012de415fb112005898146d4?rik=XZ%2b%2bZwXaa3YAjA&riu=http%3a%2f%2fwww.sanxiangham.com%2fzb_users%2fupload%2f2018%2f03%2f201803181521377849558857.jpg&ehk=Q2l2F%2bVKDyAfKtxzOpnrW6v%2bfrHJLPYKcI%2bstzcWsII%3d&risl=&pid=ImgRaw&r=0");
  background-size: 100% 600rpx;
}
.bg .title {
  text-align: center;
  color: white;
  font-size: 40rpx;
  font-weight: 800;
  margin-bottom: 20rpx;
}
.bg ._p {
  text-align: center;
  color: white;
  font-size: 35rpx;
  margin-bottom: 200rpx;
}
.bg .content {
  padding-top: 30rpx;
  padding-left: 40rpx;
  padding-bottom: 70rpx;
  background-color: #fafafa;
  border-radius: 25rpx 25rpx 0 0;
}
.bg .content .searchBox {
  display: flex;
}
.bg .content .searchBox input {
  width: 65%;
  height: 80rpx;
  color: grey;
  background-color: #f2f2f2;
  border-radius: 25rpx;
  margin-right: 20rpx;
  margin-bottom: 40rpx;
}
.bg .content .searchBox .search {
  width: 25%;
  height: 80rpx;
  color: white;
  text-align: center;
  line-height: 80rpx;
  border-radius: 50rpx;
  background-color: #00b429;
}
.bg .scan {
  padding-top: 60rpx;
  padding-right: 40rpx;
}
.bg .scan .article {
  height: 500rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  margin-bottom: 25rpx;
  background-color: white;
  box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.1);
}
.bg .scan .article .top {
  height: 20%;
  line-height: 100rpx;
  font-weight: 800;
  border-bottom: 1rpx solid #f2f2f2;
}
.bg .scan .article .center {
  display: flex;
  height: 50%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.bg .scan .article .center .left {
  width: 40%;
  height: 100%;
  background-color: palegoldenrod;
}
.bg .scan .article .center .left image {
  width: 100%;
  height: 100%;
}
.bg .scan .article .center .right {
  width: 60%;
  padding-left: 20rpx;
}
.bg .scan .article .center .right .kind {
  height: 20%;
  font-size: 40rpx;
  font-weight: 800;
}
.bg .scan .article .center .right .pro {
  height: 30%;
  padding-top: 30rpx;
}
.bg .scan .article .center .right .cycle {
  display: flex;
  height: 30%;
}
.bg .scan .article .center .right .cycle .variety {
  width: 50%;
  text-align: center;
}
.bg .scan .article .center .right .cycle .variety .name {
  font-size: 35rpx;
  font-weight: 800;
  margin-bottom: 10rpx;
}
.bg .scan .article .center .right .cycle .variety .tip {
  font-size: 28rpx;
  color: grey;
}
.bg .scan .article .bottom {
  height: 20%;
  padding-top: 20rpx;
  border-top: 1rpx solid #f2f2f2;
}
.bg .scan .article .bottom .price {
  color: #ff0030;
  font-size: 45rpx;
  font-weight: 800;
  padding-right: 10rpx;
}
.bg .scan .article .bottom .unit {
  color: grey;
}

