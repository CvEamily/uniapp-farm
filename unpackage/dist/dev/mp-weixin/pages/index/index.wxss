.bg {
  padding-top: 20rpx;
  background-color: #3ab54a;
}
.bg input {
  width: 95%;
  height: 80rpx;
  margin: 0 auto;
  color: white;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 10rpx;
}
.bg .uni-margin-wrap {
  width: 700rpx;
  width: 95%;
  margin: 0 auto;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}
.bg .swiper {
  height: 395rpx;
}
.bg .swiper-item {
  display: block;
  height: 395rpx;
  line-height: 300rpx;
  text-align: center;
}
.bg .swiper-item image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.bg .swiper-list {
  margin-top: 40rpx;
  margin-bottom: 0;
}
.bg .uni-common-mt {
  margin-top: 60rpx;
  position: relative;
}
.bg .info {
  position: absolute;
  right: 20rpx;
}
.bg .uni-padding-wrap {
  width: 550rpx;
  padding: 0 100rpx;
}
.bg .news {
  background-color: white;
}
.bg .news .content {
  display: flex;
  padding: 20rpx;
}
.bg .news .content .tag {
  width: 120rpx;
  height: 50rpx;
  color: white;
  text-align: center;
  line-height: 50rpx;
  font-size: 30rpx;
  background-color: #01c65b;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.bg .news .content .tag2 {
  background-color: #f8cc2d;
}
.bg .news .content text {
  font-size: 30rpx;
  color: grey;
}
.bg .function {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 50rpx;
  background-color: white;
}
.bg .function .option {
  width: 24%;
  text-align: center;
  margin-right: 1%;
  margin-top: 5%;
}
.bg .function .option .icon {
  width: 50%;
  margin: 0 auto;
}
.bg .function .option .icon iconfont {
  width: 100%;
  margin: 0 auto;
}
.bg .function .option text {
  font-size: 25rpx;
}

